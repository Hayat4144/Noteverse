generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id   String   @id @default(uuid())
  type UserRole @default(OWNER)
  User User[]

  @@index([id], map: "idx_role_id")
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String
  created_at DateTime @default(now())
  password   String
  roleId     String
  Role       Role     @relation(fields: [roleId], references: [id])

  @@index([email, name])
}

model Task {
  id            String       @id @default(uuid())
  title         String
  description   String?
  due_date      DateTime
  status        String
  priority      TaskPriority @default(Low)
  parent_id     String?
  is_standalone Boolean
  assignee      String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @default(now())
  tags          Tags[]       @relation("TagsToTask")
}


enum TaskPriority {
  High
  Low
  Medium
}

enum UserRole {
  OWNER
  ADMIN
  COLLABORATOR
  VIEWER
}


model Tags {
  id    String @id @default(uuid())
  name  String @unique
  tasks Task[] @relation("TagsToTask")
}